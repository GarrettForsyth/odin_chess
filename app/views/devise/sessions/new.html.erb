<%= stylesheet_link_tag 'user_form'  %>
<div class="form-container">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
      <% content_for :label, flush: true do %>
          <%= f.label :login %><br />
      <% end %>
      <% content_for :field, flush: true do %>
          <%= f.text_field :login, autofocus: true %>
      <% end %>
      <%= render 'form_field' %>

      <% content_for :label, flush: true do %>
          <%= f.label :password %><br />
      <% end %>
      <% content_for :field, flush: true do %>
          <%= f.password_field :password, autocomplete: "off" %>
      <% end %>
      <%= render 'form_field' %>

      <tr>
        <td></td>
        <td>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </td>
      </tr>
      <tr>
       <td></td>
        <td class='actions left'>
          <%= f.submit "Log in", class: 'button' %>
        </td>
      </tr>

      <tr>
        <td>
        </td>
        <td class="left">
          <%= render "devise/shared/links" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>
