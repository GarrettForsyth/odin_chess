<% flash.each do |message_type, messages| %>
  <% message_type = flash[:notice] ? 'info': message_type %>
  <% message_type = flash[:alert]  ? 'danger': message_type %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>
        <%= "#{pluralize(messages.length, "error")} must be fixed" %>
      </strong>
      <% messages = [messages] unless messages.kind_of?(Array) %>
      <% messages.each do |msg| %>
        <%= content_tag(:li, msg) %>
      <% end %>
    </div>
<% end %>
